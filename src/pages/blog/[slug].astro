---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const title = `${post.data.title} — Packaging Fast Blog`;
const description = post.data.description;
const image = post.data.image || '/images/og-image.svg';
const publishedTime = post.data.pubDate.toISOString();
const modifiedTime = post.data.pubDate.toISOString();
---

<Layout
  title={title}
  description={description}
  image={image}
  type="article"
  author={post.data.author}
  publishedTime={publishedTime}
  modifiedTime={modifiedTime}
  tags={post.data.tags}
>
  <header>
    <nav itemscope itemtype="https://schema.org/SiteNavigationElement">
      <a href="/" class="logo" itemprop="url">Packaging<span>Fast</span></a>
      <div class="nav-links">
        <a href="/#features" itemprop="name">Features</a>
        <a href="/#pricing" itemprop="name">Pricing</a>
        <a href="/blog" itemprop="name">Blog</a>
      </div>
      <a href="/#waitlist" class="nav-cta">Join Waitlist</a>
    </nav>
  </header>

  <main>
    <article itemscope itemtype="https://schema.org/Article">
      <header class="post-header">
        <nav class="breadcrumb" aria-label="Breadcrumb">
          <ol itemscope itemtype="https://schema.org/BreadcrumbList">
            <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
              <a href="/" itemprop="item">Home</a>
              <meta itemprop="position" content="1" />
            </li>
            <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
              <a href="/blog" itemprop="item">Blog</a>
              <meta itemprop="position" content="2" />
            </li>
            <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
              <span itemprop="name">{post.data.title}</span>
              <meta itemprop="position" content="3" />
            </li>
          </ol>
        </nav>

        <div class="post-meta">
          <time datetime={publishedTime} itemprop="datePublished">
            {post.data.pubDate.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          <span class="separator">•</span>
          <span class="author" itemprop="author">{post.data.author}</span>
        </div>

        <h1 itemprop="headline">{post.data.title}</h1>

        <div class="tags" itemprop="keywords">
          {post.data.tags.map(tag => (
            <a href={`/blog?tag=${tag}`} class="tag">#{tag}</a>
          ))}
        </div>

        <meta itemprop="description" content={post.data.description} />
        <meta itemprop="image" content={image} />
        <meta itemprop="publisher" content="Packaging Fast" />
        <meta itemprop="mainEntityOfPage" content={`/blog/${post.slug}`} />
      </header>

      <div class="post-content" itemprop="articleBody">
        <Content />
      </div>

      <footer class="post-footer">
        <a href="/blog" class="back-link">← Back to Blog</a>
        <div class="share" aria-label="Share this article">
          <span>Share:</span>
          <a
            href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=https://packstudio3d.com/blog/${post.slug}`}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Share on Twitter"
          >Twitter</a>
          <a
            href={`https://www.linkedin.com/sharing/share-offsite/?url=https://packstudio3d.com/blog/${post.slug}`}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Share on LinkedIn"
          >LinkedIn</a>
          <a
            href={`mailto:?subject=${encodeURIComponent(post.data.title)}&body=https://packstudio3d.com/blog/${post.slug}`}
            aria-label="Share via Email"
          >Email</a>
        </div>
      </footer>
    </article>
  </main>

  <footer>
    <p>&copy; 2025 Packaging Fast. All rights reserved.</p>
  </footer>
</Layout>

<style>
  :root {
    --primary: #1a1a1a;
    --accent: #5747F4;
    --bg: #fafafa;
    --white: #fff;
    --gray: #888;
  }
  header {
    background: white;
    border-bottom: 1px solid var(--gray-200);
  }
  nav {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 24px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .logo { font-weight: 700; font-size: 20px; color: var(--primary); }
  .logo span { background: var(--accent); color: white; padding: 4px 8px; border-radius: 6px; font-size: 14px; }
  .nav-links { display: flex; gap: 24px; }
  .nav-links a { font-size: 14px; color: var(--gray); }
  .nav-links a:hover { color: var(--primary); }
  .nav-cta { background: var(--accent); color: white; padding: 10px 20px; border-radius: 8px; font-size: 14px; font-weight: 600; }

  main { max-width: 720px; margin: 0 auto; padding: 100px 24px 60px; }

  .post-header { margin-bottom: 48px; }

  .breadcrumb { margin-bottom: 24px; }
  .breadcrumb ol { display: flex; gap: 8px; list-style: none; font-size: 14px; }
  .breadcrumb a { color: var(--gray); }
  .breadcrumb a:hover { color: var(--accent); }
  .breadcrumb .separator { color: #ddd; }

  .post-meta { display: flex; gap: 12px; justify-content: center; font-size: 14px; color: #999; margin-bottom: 16px; }

  .post-header h1 {
    font-size: 36px;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 16px;
    letter-spacing: -0.5px;
    text-align: center;
  }

  .tags { display: flex; gap: 8px; justify-content: center; flex-wrap: wrap; }
  .tag { background: #f0f0f0; padding: 4px 12px; border-radius: 20px; font-size: 13px; color: var(--gray); transition: all 0.2s; }
  .tag:hover { background: var(--accent); color: white; }

  .post-content { font-size: 17px; line-height: 1.8; }
  .post-content :global(h2) { font-size: 24px; margin: 40px 0 16px; font-weight: 600; }
  .post-content :global(h3) { font-size: 20px; margin: 32px 0 12px; font-weight: 600; }
  .post-content :global(p) { margin-bottom: 20px; color: #444; }
  .post-content :global(ul), .post-content :global(ol) { margin: 20px 0; padding-left: 24px; }
  .post-content :global(li) { margin-bottom: 8px; }
  .post-content :global(blockquote) {
    border-left: 3px solid var(--accent);
    padding-left: 20px;
    margin: 24px 0;
    font-style: italic;
    color: var(--gray);
  }
  .post-content :global(code) {
    background: #f5f5f5;
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 0.9em;
    color: #e07a5f;
  }
  .post-content :global(pre) {
    background: var(--primary);
    color: white;
    padding: 20px;
    border-radius: 8px;
    overflow-x: auto;
    margin: 24px 0;
    font-size: 14px;
    line-height: 1.6;
  }
  .post-content :global(pre code) { background: none; padding: 0; color: inherit; }
  .post-content :global(a) { color: var(--accent); text-decoration: underline; }
  .post-content :global(a:hover) { color: #d06a4f; }
  .post-content :global(img) { border-radius: 8px; margin: 24px 0; width: 100%; }
  .post-content :global(hr) { border: none; border-top: 1px solid #eee; margin: 32px 0; }

  .post-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 32px;
    border-top: 1px solid #eee;
    margin-top: 48px;
    flex-wrap: wrap;
    gap: 16px;
  }
  .back-link { color: var(--gray); font-size: 14px; }
  .back-link:hover { color: var(--accent); }
  .share { display: flex; gap: 16px; align-items: center; font-size: 14px; color: var(--gray); }
  .share a { color: var(--gray); transition: color 0.2s; }
  .share a:hover { color: var(--accent); }

  footer { text-align: center; padding: 30px 24px; color: var(--gray); font-size: 14px; border-top: 1px solid #eee; }

  @media (max-width: 768px) {
    .nav-links { display: none; }
    .post-header h1 { font-size: 28px; }
    .post-footer { flex-direction: column; align-items: flex-start; }
  }
</style>
