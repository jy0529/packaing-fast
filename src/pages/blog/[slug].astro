---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const title = `${post.data.title} — Packaging Fast Blog`;
const description = post.data.description;
const image = post.data.image || '/images/og-image.svg';
const publishedTime = post.data.pubDate.toISOString();
const modifiedTime = post.data.pubDate.toISOString();
---

<Layout
  title={title}
  description={description}
  image={image}
  type="article"
  author={post.data.author}
  publishedTime={publishedTime}
  modifiedTime={modifiedTime}
  tags={post.data.tags}
>
  <header>
    <nav itemscope itemtype="https://schema.org/SiteNavigationElement">
      <a href="/" class="logo" itemprop="url">Packaging<span>Fast</span></a>
      <div class="nav-links">
        <a href="/#features" itemprop="name">Features</a>
        <a href="/#pricing" itemprop="name">Pricing</a>
        <a href="/blog" itemprop="name">Blog</a>
      </div>
      <a href="/#waitlist" class="nav-cta">Join Waitlist</a>
    </nav>
  </header>

  <main>
    <article itemscope itemtype="https://schema.org/Article">
      <header class="post-header">
        <nav class="breadcrumb" aria-label="Breadcrumb">
          <ol itemscope itemtype="https://schema.org/BreadcrumbList">
            <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
              <a href="/" itemprop="item">Home</a>
              <meta itemprop="position" content="1" />
            </li>
            <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
              <a href="/blog" itemprop="item">Blog</a>
              <meta itemprop="position" content="2" />
            </li>
            <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
              <span itemprop="name">{post.data.title}</span>
              <meta itemprop="position" content="3" />
            </li>
          </ol>
        </nav>

        <div class="post-meta">
          <time datetime={publishedTime} itemprop="datePublished">
            {post.data.pubDate.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          <span class="separator">•</span>
          <span class="author" itemprop="author">{post.data.author}</span>
        </div>

        <h1 itemprop="headline">{post.data.title}</h1>

        <div class="tags" itemprop="keywords">
          {post.data.tags.map(tag => (
            <a href={`/blog?tag=${tag}`} class="tag">#{tag}</a>
          ))}
        </div>

        <meta itemprop="description" content={post.data.description} />
        <meta itemprop="image" content={image} />
        <meta itemprop="publisher" content="Packaging Fast" />
        <meta itemprop="mainEntityOfPage" content={`/blog/${post.slug}`} />
      </header>

      <div class="post-content" itemprop="articleBody">
        <Content />
      </div>

      <footer class="post-footer">
        <a href="/blog" class="back-link">← Back to Blog</a>
        <div class="share" aria-label="Share this article">
          <span>Share:</span>
          <a
            href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=https://packstudio3d.com/blog/${post.slug}`}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Share on Twitter"
          >Twitter</a>
          <a
            href={`https://www.linkedin.com/sharing/share-offsite/?url=https://packstudio3d.com/blog/${post.slug}`}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Share on LinkedIn"
          >LinkedIn</a>
          <a
            href={`mailto:?subject=${encodeURIComponent(post.data.title)}&body=https://packstudio3d.com/blog/${post.slug}`}
            aria-label="Share via Email"
          >Email</a>
        </div>
      </footer>
    </article>
  </main>

  <footer>
    <p>&copy; 2025 Packaging Fast. All rights reserved.</p>
  </footer>
</Layout>

<style>
  :root {
    --primary: #1a1a1a;
    --accent: #5747F4;
    --accent-light: #e8ecff;
    --bg: #fafafa;
    --white: #fff;
    --gray-200: #eee;
    --gray-300: #ddd;
    --gray-400: #ccc;
    --gray-500: #888;
    --gray-600: #666;
  }
  header {
    background: white;
    border-bottom: 1px solid var(--gray-200);
  }
  nav {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 24px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .logo { font-weight: 700; font-size: 20px; color: var(--primary); }
  .logo span { background: var(--accent); color: white; padding: 4px 8px; border-radius: 6px; font-size: 14px; }
  .nav-links { display: flex; gap: 24px; }
  .nav-links a { font-size: 14px; color: var(--gray-500); }
  .nav-links a:hover { color: var(--primary); }
  .nav-cta { background: var(--accent); color: white; padding: 10px 20px; border-radius: 8px; font-size: 14px; font-weight: 600; }

  main { max-width: 720px; margin: 0 auto; padding: 100px 24px 60px; }

  .post-header { margin-bottom: 48px; }

  .breadcrumb { margin-bottom: 24px; }
  .breadcrumb ol { display: flex; gap: 8px; list-style: none; font-size: 14px; }
  .breadcrumb a { color: var(--gray-500); }
  .breadcrumb a:hover { color: var(--accent); }
  .breadcrumb .separator { color: var(--gray-300); }

  .post-meta { display: flex; gap: 12px; justify-content: center; font-size: 14px; color: var(--gray-500); margin-bottom: 16px; }

  .post-header h1 {
    font-size: 36px;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 16px;
    letter-spacing: -0.5px;
    text-align: center;
  }

  .tags { display: flex; gap: 8px; justify-content: center; flex-wrap: wrap; }
  .tag { background: var(--gray-200); padding: 4px 12px; border-radius: 20px; font-size: 13px; color: var(--gray-600); transition: all 0.2s; }
  .tag:hover { background: var(--accent); color: white; }

  .post-content { font-size: 17px; line-height: 1.8; }

  .post-content :global(h2) {
    font-size: 26px;
    margin: 48px 0 20px;
    font-weight: 700;
    color: var(--primary);
    letter-spacing: -0.5px;
    display: flex;
    align-items: center;
    gap: 12px;
  }
  .post-content :global(h2::before) {
    content: '';
    width: 4px;
    height: 28px;
    background: var(--accent);
    border-radius: 2px;
  }
  .post-content :global(h3) {
    font-size: 21px;
    margin: 36px 0 16px;
    font-weight: 600;
    color: var(--primary);
  }
  .post-content :global(p) { margin-bottom: 24px; color: #444; }

  .post-content :global(ul), .post-content :global(ol) {
    margin: 24px 0;
    padding-left: 28px;
  }
  .post-content :global(li) {
    margin-bottom: 12px;
    position: relative;
    padding-left: 4px;
  }
  .post-content :global(ul li::marker) { color: var(--accent); }
  .post-content :global(ol li::marker) { color: var(--accent); font-weight: 600; }

  .post-content :global(blockquote) {
    border-left: none;
    padding: 24px 28px;
    margin: 32px 0;
    background: linear-gradient(135deg, var(--accent-light) 0%, #f8f9ff 100%);
    border-radius: 0 12px 12px 0;
    font-style: normal;
    color: var(--primary);
  }
  .post-content :global(blockquote p) { margin-bottom: 0; }
  .post-content :global(blockquote::before) {
    content: '"';
    font-size: 48px;
    color: var(--accent);
    opacity: 0.3;
    font-family: Georgia, serif;
    line-height: 1;
    margin-bottom: 8px;
    display: block;
  }

  .post-content :global(code) {
    background: linear-gradient(135deg, #f0f0f5 0%, #e8e8f0 100%);
    padding: 3px 8px;
    border-radius: 6px;
    font-size: 0.9em;
    color: var(--accent);
    font-weight: 500;
  }
  .post-content :global(pre) {
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    color: #e8e8e8;
    padding: 24px;
    border-radius: 12px;
    overflow-x: auto;
    margin: 32px 0;
    font-size: 14px;
    line-height: 1.7;
    border: 1px solid rgba(255,255,255,0.1);
  }
  .post-content :global(pre code) { background: none; padding: 0; color: inherit; }

  .post-content :global(a) { color: var(--accent); text-decoration: none; font-weight: 500; border-bottom: 2px solid transparent; transition: all 0.2s; }
  .post-content :global(a:hover) { border-bottom-color: var(--accent); color: #4338ca; }

  .post-content :global(img) {
    border-radius: 12px;
    margin: 32px 0;
    width: 100%;
    box-shadow: 0 8px 32px rgba(0,0,0,0.08);
  }
  .post-content :global(hr) {
    border: none;
    border-top: 2px solid linear-gradient(90deg, transparent, var(--gray-300), transparent);
    margin: 40px 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, #ddd, transparent);
  }

  .post-content :global(table) {
    width: 100%;
    margin: 32px 0;
    border-collapse: collapse;
    font-size: 15px;
    background: var(--white);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.06);
  }
  .post-content :global(th) {
    background: linear-gradient(135deg, var(--accent) 0%, #6c5ce7 100%);
    color: white;
    padding: 16px 20px;
    text-align: left;
    font-weight: 600;
  }
  .post-content :global(td) {
    padding: 14px 20px;
    border-bottom: 1px solid var(--gray-200);
    color: #444;
  }
  .post-content :global(tr:last-child td) { border-bottom: none; }
  .post-content :global(tr:hover td) { background: var(--accent-light); }

  .post-content :global(.highlight-box) {
    background: linear-gradient(135deg, #fff9e6 0%, #fff5d6 100%);
    border: 1px solid #f0d78c;
    border-radius: 10px;
    padding: 20px 24px;
    margin: 28px 0;
  }
  .post-content :global(.highlight-box.info) {
    background: linear-gradient(135deg, #e8f4fd 0%, #d9edf7 100%);
    border-color: #b8daef;
  }
  .post-content :global(.highlight-box.success) {
    background: linear-gradient(135deg, #e8f8f0 0%, #d4f1e4 100%);
    border-color: #a8e6c0;
  }
  .post-content :global(.highlight-box strong) { display: block; margin-bottom: 8px; color: var(--primary); }

  .post-content :global(.stat-grid) {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin: 32px 0;
  }
  .post-content :global(.stat-card) {
    background: linear-gradient(135deg, var(--accent-light) 0%, #f0f2ff 100%);
    border-radius: 12px;
    padding: 24px;
    text-align: center;
    border: 1px solid rgba(87, 71, 244, 0.1);
  }
  .post-content :global(.stat-card .value) {
    font-size: 32px;
    font-weight: 700;
    color: var(--accent);
    display: block;
    margin-bottom: 8px;
  }
  .post-content :global(.stat-card .label) {
    font-size: 14px;
    color: var(--gray-500);
  }

  .post-content :global(.timeline) {
    position: relative;
    margin: 32px 0;
    padding-left: 28px;
  }
  .post-content :global(.timeline::before) {
    content: '';
    position: absolute;
    left: 8px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(180deg, var(--accent), var(--accent-light));
  }
  .post-content :global(.timeline-item) {
    position: relative;
    margin-bottom: 24px;
    padding-left: 20px;
  }
  .post-content :global(.timeline-item::before) {
    content: '';
    position: absolute;
    left: -24px;
    top: 6px;
    width: 12px;
    height: 12px;
    background: var(--accent);
    border-radius: 50%;
    border: 3px solid var(--white);
  }
  .post-content :global(.timeline-item .date) {
    font-size: 13px;
    color: var(--accent);
    font-weight: 600;
    margin-bottom: 4px;
  }
  .post-content :global(.timeline-item .title) {
    font-weight: 600;
    color: var(--primary);
    margin-bottom: 4px;
  }
  .post-content :global(.timeline-item p) {
    font-size: 14px;
    color: var(--gray-500);
    margin: 0;
  }

  .post-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 32px;
    border-top: 1px solid var(--gray-200);
    margin-top: 48px;
    flex-wrap: wrap;
    gap: 16px;
  }
  .back-link { color: var(--gray-500); font-size: 14px; }
  .back-link:hover { color: var(--accent); }
  .share { display: flex; gap: 16px; align-items: center; font-size: 14px; color: var(--gray-500); }
  .share a { color: var(--gray-500); transition: color 0.2s; }
  .share a:hover { color: var(--accent); }

  footer { text-align: center; padding: 30px 24px; color: var(--gray-500); font-size: 14px; border-top: 1px solid var(--gray-200); }

  @media (max-width: 768px) {
    .nav-links { display: none; }
    .post-header h1 { font-size: 28px; }
    .post-footer { flex-direction: column; align-items: flex-start; }
  }
</style>
